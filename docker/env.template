# Docker Environment Configuration
# Copy this to .env and adjust as needed

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=your-secret-key-change-this-in-production
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
DATABASE_URL="mysql://root:password@db:3306/rag_backend?serverVersion=8.0"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
MESSENGER_TRANSPORT_DSN=redis://redis:6379/messages
###< symfony/messenger ###

###> nelmio/cors-bundle ###
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'
###< nelmio/cors-bundle ###

###> RAG Backend Configuration ###
# Redis
REDIS_URL=redis://redis:6379

# Neo4j Graph Database
NEO4J_RAG_DATABASE=bolt://neo4j:neo4j@neo4j:7687

# Document Extractor (Apache Tika)
DOCUMENT_EXTRACTOR_URL=http://tika:9998

# Large Language Model (Ollama)
LMM_URL=http://ollama:11434

# Document Storage Path (Docker volume)
DOCUMENT_STORAGE_PATH=/var/www/html/public/storage

# API Version
API_VERSION=1.0.0

# Logging
LOG_LEVEL=debug

# Performance Settings
MESSENGER_QUEUE_SIZE=100
CACHE_TTL=3600

# Development Settings (only for dev environment)
SYMFONY_DEPRECATIONS_HELPER=weak_vendors
DEBUG=1
###< RAG Backend Configuration ###
